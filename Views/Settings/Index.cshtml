@{
  ViewData["Title"] = "Settings";
}

<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="py-4 mb-6">Settings</h4>

  <!-- Payment Method Section -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Payment Method</h5>

          <!-- Existing Payment Methods -->
          <div class="mb-4">
            <div class="d-flex align-items-center p-3">
              <div class="me-3">
                <div class="d-flex align-items-center justify-content-center bg-dark rounded" style="width: 40px; height: 25px;">
                  <div class="d-flex">
                    <div class="rounded-circle" style="width: 12px; height: 12px; margin-right: -6px; background-color: #ec7905;"></div>
                    <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                  </div>
                </div>
              </div>
              <div class="flex-grow-1">
                <h6 class="mb-0">Mastercard ****7899</h6>
                <small class="text-muted">Default payment method</small>
              </div>
            </div>
          </div>

          <!-- Add Card Button -->
          <div class="d-flex align-items-center text-warning" style="cursor: pointer;" onclick="addNewCard()">
            <div class="me-2">
              <i class="bx bx-plus-circle fs-4"></i>
            </div>
            <span class="fw-semibold">Add Card</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- New Card Offcanvas -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="newCardModal" aria-labelledby="newCardModalLabel">
  <div class="offcanvas-header border-bottom">
    <h5 class="offcanvas-title" id="newCardModalLabel">New Card</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100">
    <form id="newCardForm">
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullName" value="Jake Addison" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" value="jake@gmail.com" required>
      </div>
      <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <textarea class="form-control" id="address" rows="3" required>195 rue due crossaint, saint-laurnet, h411e2, Qc</textarea>
      </div>
      <div class="mb-3">
        <label for="cardNumber" class="form-label">Card number</label>
        <input type="text" class="form-control" id="cardNumber" value="1554 5151 4545 6262" required>
      </div>
      <div class="mb-3">
        <label for="expirationDate" class="form-label">Card Expiration date dd/mm/yyyy</label>
        <input type="text" class="form-control" id="expirationDate" value="31/10/2025" required>
      </div>
      <div class="mb-3">
        <label for="cvv" class="form-label">CVV</label>
        <input type="text" class="form-control" id="cvv" value="656" required>
      </div>
      <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select class="form-select" id="status" required>
          <option value="primary" selected>Primary card</option>
          <option value="secondary">Secondary card</option>
          <option value="backup">Backup card</option>
        </select>
      </div>
      <div class="d-flex gap-2 mt-4">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">Cancel</button>
        <button type="button" class="btn" style="background-color: #ec7905; color: white;" onclick="submitNewCard()">Submit</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  <script src="~/custom/js/settings.js"></script>
}
