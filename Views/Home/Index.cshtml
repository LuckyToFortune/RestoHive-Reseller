      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body mx-0 flex-grow-0 p-6 h-100">
      <form id="editCustomerForm">
        <div class="mb-3">
          <label for="editFullName" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="editFullName" name="fullName" value="Jake Addison">
        </div>
        <div class="mb-3">
          <label for="editEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="editEmail" name="email" value="jake@gmail.com">
        </div>
        <div class="mb-3">
          <label for="editAutoDebit" class="form-label">Auto Debit</label>
          <input type="text" class="form-control" id="editAutoDebit" name="autoDebit" value="Auto Debit" readonly>
        </div>
        <div class="mb-3">
          <label for="editBilling" class="form-label">Billing</label>
          <input type="text" class="form-control" id="editBilling" name="billing" value="Auto Debit" readonly>
        </div>
        <div class="mb-3">
          <label for="editAddress" class="form-label">Address</label>
          <textarea class="form-control" id="editAddress" name="address" rows="3">195 rue due crossaint, saint-laurnet, h411e2, Qc</textarea>
        </div>
        <div class="mb-3">
          <label for="editDiscountAmount" class="form-label">Discount Amount</label>
          <div class="input-group">
            <input type="number" class="form-control" id="editDiscountAmount" name="discountAmount" value="18.00" step="0.01">
            <span class="input-group-text">%</span>
          </div>
        </div>
        <div class="mb-3">
          <label for="editStatus" class="form-label">Status</label>
          <select class="form-select" id="editStatus" name="status">
            <option value="active" selected>Active</option>
            <option value="inactive">Inactive</option>
            <option value="suspended">Suspended</option>
          </select>
        </div>
        <div class="d-flex gap-2 mt-4">
          <button type="button" class="btn btn-warning" onclick="openFiles()">Files</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">Cancel</button>
          <button type="button" class="btn btn-warning" onclick="submitEditCustomer()">Submit</button>
        </div>
      </form>
    </div>
  </div>
