@{
  ViewData["Title"] = "Files";
}

@section VendorStyles {
  <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
  <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css">
  <link rel="stylesheet" href="~/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css">
  <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
  <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/form-validation.css" />
}

@section VendorScripts {
  <script src="~/vendor/libs/moment/moment.js"></script>
  <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
  <script src="~/vendor/libs/select2/select2.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/popular.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/bootstrap5.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/auto-focus.js"></script>
  <script src="~/vendor/libs/cleavejs/cleave.js"></script>
  <script src="~/vendor/libs/cleavejs/cleave-phone.js"></script>
}

@section PageScripts {
  <script src="~/custom/js/files.js"></script>
}

@* ************** Content ************** *@


<!-- Files Tabs -->
<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex gap-2">
      <button class="btn btn-outline-secondary rounded-pill px-4" onclick="switchToMyFiles()">
        <img src="~/img/discounts/ic1.png" alt="My Files" style="width: 16px; height: 16px; margin-right: 6px;" />
        My Files
      </button>
      <button class="btn active rounded-pill px-4" style="background-color: #ec7905; color: white;" onclick="switchToCustomers()">
        <img src="~/img/discounts/ic2.png" alt="Customers" style="width: 16px; height: 16px; margin-right: 6px;" />
        Customers
      </button>
    </div>
  </div>
</div>

<!-- Documents Table -->
<div class="card">
  <!-- Card Header with Customer ID and Actions -->
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h3 class="fw-bold mb-0">Customer ID: 5151</h3>
      </div>
      <div class="d-flex align-items-center gap-3">
        <div class="input-group" style="width: 200px;">
          <input type="text" class="form-control" value="June 29, 2025" readonly>
          <span class="input-group-text">
            <i class="bx bx-calendar"></i>
          </span>
        </div>
        <button class="btn" style="background-color: #ec7905; color: white;" onclick="downloadAllDocuments()">
          <i class="bx bx-download me-1"></i>
          Download All
        </button>
        <button class="btn" style="background-color: #ec7905; color: white;" data-bs-toggle="modal" data-bs-target="#addDocumentModal">
          Add Document +
        </button>
      </div>
    </div>
  </div>
  
  <!-- Table -->
  <div class="card-datatable table-responsive">
    <table class="datatables-documents table">
      <thead>
        <tr style="background-color: #f9f9f9;">
          <th>DATE</th>
          <th>DOCUMENT TITLE</th>
          <th>FILE OF</th>
          <th>ACTION</th>
        </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
    
    <!-- Pagination -->
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <nav aria-label="Page navigation">
          <ul class="pagination mb-0">
       
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<!-- Add Document Modal -->
<div class="modal fade" id="addDocumentModal" tabindex="-1" aria-labelledby="addDocumentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl h-100 my-0 d-flex align-items-center justify-content-center" style="max-width:900px; height: 100vh; margin: 0 auto;">
    <div class="modal-content" style="height: 100vh; display:flex; flex-direction:column; justify-content:center; align-items:center;">
      <div class="modal-header border-0 w-100 d-block text-center" style="padding-bottom:0;">
        <!-- Logo -->
        <div class="mb-3 mt-4">
          <img src="~/img/discounts/ellipse.png" alt="Logo" style="height:80px; width:auto; object-fit:contain;" class="mb-2">
        </div>
        <!-- Title -->
        <h3 class="modal-title fw-bold mb-4" id="addDocumentModalLabel">Add document</h3>
        <hr class="my-3" style="border-color:#dee2e6;">
      </div>
      <div class="modal-body w-100 d-flex flex-column align-items-center justify-content-center flex-grow-1" style="max-width:80%; margin:auto;">
        <form id="addDocumentForm" class="w-100 d-flex flex-column align-items-center">
          <div class="mb-4" style="width:100%;">
            <label for="selectCustomer" class="form-label" style="font-size:0.875rem; color:#6c757d; margin-bottom:0.5rem;">Select customer</label>
            <input type="text" class="form-control" id="selectCustomer" value="Jaxson Carder" readonly style="font-weight:400;">
          </div>
          <div class="mb-4" style="width:100%;">
            <label for="documentTitle" class="form-label" style="font-size:0.875rem; color:#6c757d; margin-bottom:0.5rem;">Document title</label>
            <input type="text" class="form-control" id="documentTitle" value="Document_1" required style="font-weight:400;">
          </div>
          <div class="mb-4" style="width:100%;">
            <button type="button" class="btn btn-outline-warning w-100 d-flex align-items-center justify-content-center" style="height:44px; font-size:1rem;" onclick="document.getElementById('documentFile').click()">
              <i class="bx bx-upload me-2"></i>
              <span class="fw-semibold">Upload Document</span>
            </button>
            <input type="file" class="form-control d-none" id="documentFile" required>
          </div>
        </form>
      </div>
      <div class="modal-footer w-100 border-0 d-flex justify-content-between" style="position:absolute; bottom:0; left:0; background:transparent;">
        <button type="button" class="btn btn-outline-secondary" style="height:44px; font-size:1rem;" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="addDocumentForm" class="btn" style="background-color: #ec7905; color: white; height:44px; font-size:1rem;">Add</button>
      </div>
    </div>
  </div>
</div>
