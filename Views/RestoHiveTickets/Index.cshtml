@section Scripts {
  <script src="~/custom/js/tickets.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add click handlers to date cells
      const dateCells = document.querySelectorAll('.date-clickable');
      dateCells.forEach(function(cell) {
        cell.style.cursor = 'pointer';
        cell.addEventListener('click', function() {
          const ticketId = this.getAttribute('data-ticket-id');
          const date = this.getAttribute('data-date');
          const subject = this.getAttribute('data-subject');
          const department = this.getAttribute('data-department');
          const requestor = this.getAttribute('data-requestor');
          const status = this.getAttribute('data-status');

          // Populate modal with ticket data
          document.getElementById('modal-ticket-id').textContent = ticketId;
          document.getElementById('modal-ticket-date').textContent = date;
          document.getElementById('modal-ticket-subject').textContent = subject;
          document.getElementById('modal-department').value = department;
          document.getElementById('modal-subject').value = subject;
          document.getElementById('modal-description').value = 'Please don\'t let the title of a post be more than 25 character and always make sure you use a trending tag and keywords in the description of each of my posts.';

          // Show the modal
          const modal = new bootstrap.Modal(document.getElementById('ticketDetailModal'));
          modal.show();

          // Add click handlers to images in the modal after it's shown
          setTimeout(function() {
            const clickableImages = document.querySelectorAll('#ticketDetailModal .clickable-image');
            clickableImages.forEach(function(image) {
              image.addEventListener('click', function() {
                const imageSrc = this.getAttribute('data-image-src');
                const imageTitle = this.getAttribute('data-image-title');

                document.getElementById('imageDetailModalImage').src = imageSrc;
                const imageModal = new bootstrap.Modal(document.getElementById('imageDetailModal'));
                imageModal.show();
              });
            });
          }, 100);
        });
      });

      // Handle file attachment click
      const attachmentIcon = document.querySelector('.bx-paperclip');
      const attachmentText = document.querySelector('.bx-paperclip').nextElementSibling;
      const fileInput = document.getElementById('upload');

      if (attachmentIcon && fileInput) {
        attachmentIcon.addEventListener('click', function() {
          fileInput.click();
        });
      }

      if (attachmentText && fileInput) {
        attachmentText.addEventListener('click', function() {
          fileInput.click();
        });
      }

      // Handle file selection
      if (fileInput) {
        fileInput.addEventListener('change', function(e) {
          if (e.target.files.length > 0) {
            const fileName = e.target.files[0].name;
            attachmentText.textContent = fileName;
          }
        });
      }

      // Initialize tooltips
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });

      // Handle form submission
      const ticketForm = document.getElementById('newTicketForm');
      if (ticketForm) {
        ticketForm.addEventListener('submit', function(e) {
          e.preventDefault();

          // Get form values
          const department = document.getElementById('department').value;
          const subject = document.getElementById('subject').value;
          const description = document.getElementById('description').value;
          const file = fileInput.files[0];

          // Validate form
          if (!department || !subject || !description) {
            console.log('Please fill in all required fields');
            return;
          }

          // Here you would typically send the data to the server
          console.log('Submitting ticket:', { department, subject, description, file });

          // Close the modal
          const modal = bootstrap.Modal.getInstance(document.getElementById('newTicketModal'));
          modal.hide();

          // Show success message
          console.log('Ticket submitted successfully!');
        });
      }
    });
  </script>
}
