@{
    ViewData["Title"] = "Ticket Details";
    var ticketId = ViewBag.TicketId;
    ViewData["contentNavbar"] = true;
    ViewData["isFooter"] = false; // Hide footer on this page
}

<style>
    /* Sticky Footer Solution */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .content-wrapper {
        flex: 1 0 auto;
    }

    .footer {
        flex-shrink: 0;
        background: white;
        padding: 1.5rem 0;
        margin-top: 2rem;
    }
    
    /* Ensure ticket content doesn't get cut off */
    .container-fluid.py-4 {
        padding-bottom: 3rem;
    }

    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f5f8fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .message-avatar img {
        width: 24px;
        height: 24px;
        object-fit: contain;
    }

    .message {
        display: flex;
        margin-bottom: 1.5rem;
    }

    .message-content {
        flex: 1;
    }

    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .message-sender {
        font-weight: 600;
        color: #3f4254;
        margin: 0;
    }

    .message-time {
        font-size: 0.8rem;
        color: #b5b5c3;
    }

    .message-text {
        color: #5e6278;
        margin: 0;
        line-height: 1.6;
    }

    .reply-form {
        background: #f5f8fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-top: 2rem;
    }

    .form-label {
        font-weight: 500;
        color: #3f4254;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 0.475rem;
        border: 1px solid #e4e6ef;
        padding: 0.75rem 1rem;
    }

    .btn-primary {
        background-color: #0095e8;
        border-color: #0095e8;
        padding: 0.65rem 1.5rem;
        font-weight: 500;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        color: #7e8299;
        text-decoration: none;
    }

    .btn-icon i {
        margin-right: 0.5rem;
    }

    .attachments {
        margin: 1.5rem 0;
    }

    .attachment-item {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px dashed #e4e6ef;
    }

    .attachment-item:last-child {
        border-bottom: none;
    }

    .attachment-icon {
        color: #7e8299;
        margin-right: 0.75rem;
    }

    .attachment-name {
        flex: 1;
        color: #5e6278;
    }

    .attachment-delete {
        color: #f1416c;
        background: none;
        border: none;
        padding: 0.25rem;
        cursor: pointer;
    }

    .replies-section {
        margin-top: 2.5rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #e4e6ef;
    }

    .footer {
        font-size: 1.1rem;
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="row g-4">
        <!-- Left Sidebar -->
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                    <div class="bg-black rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 120px; height: 120px;">
                        <img src="/img/discounts/Vector.png" alt="Ticket" class="img-fluid" style="max-height: 60px;">
                    </div>
                    <h5 class="mb-2">Promoting video</h5>
                    <div class="text-muted">@DateTime.Now.ToString("dd MMM yyyy")</div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="/RestoHiveTickets" class="btn btn-link text-dark p-0">
                    <i class="bx bx-arrow-back me-1"></i> Back
                </a>
                <h3 class="mb-0">Ticket Details</h3>
                <div></div>
            </div>

            <div class="card">
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="department" class="form-label fw-medium">Department</label>
                            <select class="form-select" id="department" required>
                                <option value="" disabled selected>Select Department</option>
                                <option>Sales Department</option>
                                <option>Support</option>
                                <option>Billing</option>
                                <option>Technical</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a department
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label fw-medium">Subject</label>
                            <input type="text" class="form-control" id="subject" value="Promoting video" required>
                            <div class="invalid-feedback">
                                Please enter a subject
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label fw-medium">Description</label>
                            <textarea class="form-control" id="description" rows="4" required>Hello, I would like to inquire about promoting our new video content. Could you please provide more information about the available promotion packages?</textarea>
                            <div class="invalid-feedback">
                                Please enter a description
                            </div>
                        </div>



                <!-- Replies Section -->
                <div class="mt-5">
                    <h5 class="mb-4">Replies</h5>
                    
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <!-- Reply 1 -->
                                <tr>
                                    <td class="border-0" style="vertical-align: top;">
                                        <div class="d-flex">
                                            <div class="text-muted small me-3" style="width: 120px;">09 Jan 2025, 11:45 AM</div>
                                            <div class="flex-grow-1">
                                        <p class="mb-3">Thank you for reaching out, Annette! We'd be happy to help you promote your video content. Here are our current promotion packages...</p>
                                        <div class="d-flex gap-1 mb-2">
                                            <div class="position-relative">
                                                <img src="/img/discounts/image.png" class="cursor-pointer p-0 border-0" style="width: 50px; height: 40px; object-fit: cover; border-radius: 4px;" alt="Promotion Package" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="viewImage(this)">
                                                <div class="position-absolute top-0 start-0 translate-middle">
                                                    <img src="/img/discounts/Vector.png" width="12" height="12" class="d-block">
                                                </div>
                                            </div>
                                            <div class="position-relative">
                                                <img src="/img/discounts/image.png" class="cursor-pointer p-0 border-0" style="width: 50px; height: 40px; object-fit: cover; border-radius: 4px;" alt="Promotion Package" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="viewImage(this)">
                                                <div class="position-absolute top-0 start-0 translate-middle">
                                                    <img src="/img/discounts/Vector.png" width="12" height="12" class="d-block">
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Divider -->
                                <tr>
                                    <td colspan="2" class="py-0">
                                        <hr class="my-4">
                                    </td>
                                </tr>

                                <!-- Reply 2 -->
                                <tr>
                                    <td class="border-0" style="vertical-align: top;">
                                        <div class="d-flex">
                                            <div class="text-muted small me-3" style="width: 120px;">09 Jan 2025, 10:30 AM</div>
                                            <div class="flex-grow-1">
                                        <p class="mb-0">Hello, I would like to inquire about promoting our new video content. Could you please provide more information about the available promotion packages?</p>
                                    </td>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content h-100">
            <div class="modal-body p-0 bg-light d-flex align-items-center justify-content-center" style="min-height: 90vh;">
                <img id="modalImage" src="" class="img-fluid h-100" style="object-fit: contain; width: 100%;" alt="Enlarged view">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .cursor-pointer { cursor: pointer; }
        .modal-backdrop.show { opacity: 0.5 !important; }
        .modal-content {
            background-color: #f8f9fa;
            border: none;
            border-radius: 0.5rem;
            margin: 1rem;
            height: 95vh;
        }
        .modal-dialog {
            max-width: 95%;
            height: 95vh;
            margin: 0 auto;
        }
    </style>
    <script>
        function viewImage(element) {
            const modalImage = document.getElementById('modalImage');
            modalImage.src = element.src;
            modalImage.alt = element.alt;
        }

        // This would be populated with actual ticket data in a real application
        document.addEventListener('DOMContentLoaded', function() {
            // Get ticket ID from the URL
            const urlParams = new URLSearchParams(window.location.search);
            const ticketId = urlParams.get('id');

            if (ticketId) {
                // In a real app, you would fetch the ticket details from the server
                // For now, we'll just update the UI with the ID
                document.querySelectorAll('#ticket-id, #ticket-id-header').forEach(el => {
                    el.textContent = ticketId;
                });

                // You would also update other fields with the actual ticket data
            }

            // Handle form submission
            const replyForm = document.getElementById('reply-form');
            if (replyForm) {
                replyForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // Handle reply submission
                    alert('Your reply has been sent!');
                });
            }
        });
    </script>
}
