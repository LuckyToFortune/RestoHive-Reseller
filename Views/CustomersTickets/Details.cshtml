@{
    ViewData["Title"] = "Ticket Details";
    var ticketId = ViewBag.TicketId;
    ViewData["contentNavbar"] = true;
    ViewData["isFooter"] = false; 
}

<style>
  
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .content-wrapper {
        flex: 1 0 auto;
    }

    .footer {
        flex-shrink: 0;
        background: white;
        padding: 1.5rem 0;
        margin-top: 2rem;
    }

    .container-fluid.py-4 {
        padding-bottom: 3rem;
    }

    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f5f8fa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .message-avatar img {
        width: 24px;
        height: 24px;
        object-fit: contain;
    }

    .message {
        display: flex;
        margin-bottom: 1.5rem;
    }

    .message-content {
        flex: 1;
    }

    .message-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .message-sender {
        font-weight: 600;
        color: #3f4254;
        margin: 0;
    }

    .message-time {
        font-size: 0.8rem;
        color: #b5b5c3;
    }

    .message-text {
        color: #5e6278;
        margin: 0;
        line-height: 1.6;
    }

    .reply-form {
        background: #f5f8fa;
        border-radius: 0.5rem;
        padding: 1.5rem;
        margin-top: 2rem;
    }

    .form-label {
        font-weight: 500;
        color: #3f4254;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 0.475rem;
        border: 1px solid #e4e6ef;
        padding: 0.75rem 1rem;
    }

    .btn-primary {
        background-color: #0095e8;
        border-color: #0095e8;
        padding: 0.65rem 1.5rem;
        font-weight: 500;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        color: #7e8299;
        text-decoration: none;
    }

    .btn-icon i {
        margin-right: 0.5rem;
    }

    .attachments {
        margin: 1.5rem 0;
    }

    .attachment-item {
        display: flex;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px dashed #e4e6ef;
    }

    .attachment-item:last-child {
        border-bottom: none;
    }

    .attachment-icon {
        color: #7e8299;
        margin-right: 0.75rem;
    }

    .attachment-name {
        flex: 1;
        color: #5e6278;
    }

    .attachment-delete {
        color: #f1416c;
        background: none;
        border: none;
        padding: 0.25rem;
        cursor: pointer;
    }

    .replies-section {
        margin-top: 2.5rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #e4e6ef;
    }

    .footer {
        font-size: 1.1rem;
        font-weight: 600;
        color: #3f4254;
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .modal-backdrop.show {
        opacity: 0.5 !important;
    }

    .modal-content {
        background-color: #f8f9fa;
        border: none;
        border-radius: 0.5rem;
        margin: 1rem;
        height: 95vh;
    }

    .modal-dialog {
        max-width: 95%;
        height: 95vh;
        margin: 0 auto;
    }
</style>

<div class="container-fluid py-4">
    <div class="row g-4">
        <!-- Left Sidebar -->
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center p-4">
                    <div class="mb-3">
                        <div style="width: 80px; height: 80px; background-color: #000000; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <img src="/img/discounts/Vector.png" alt="Ticket" style="width: 40px; height: 40px; object-fit: contain;">
                        </div>
                    </div>
                    <h4 class="mb-1 fw-bold" style="font-size: 1.25rem;">Ticket</h4>
                    <p class="mb-1 text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</p>
                    <p class="mb-0 text-muted">Promoting video</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-start mb-4">
                <a href="/CustomersTickets" class="btn btn-link text-dark p-0">
                    <i class="bx bx-arrow-back me-1"></i> Back
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form action="/CustomersTickets/Details" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <div class="mb-2">
                                <h4 class="mb-0 fw-bold" style="font-size: 1.25rem;">Ticket #@ticketId</h4>
                            </div>
                            <label for="department" class="form-label">Department</label>
                            <select class="form-select" id="department" required>
                                <option value="" disabled selected>Select Department</option>
                                <option value="sales">Sales</option>
                                <option value="support">Support</option>
                                <option value="billing">Billing</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="subject" class="form-label fw-medium">Subject</label>
                            <input type="text" class="form-control" id="subject" value="Promoting video" required>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label fw-medium">Description</label>
                            <textarea class="form-control" id="description" rows="5" required>Hello, I would like to inquire about promoting our new video content. Could you please provide more information about the available promotion packages?</textarea>
                        </div>

                        <!-- Attached Image Section -->
                        <div class="d-flex align-items-center mb-4">
                            <img src="/img/discounts/upload.png" alt="Attachment" style="width: 16px; height: 16px; margin-right: 8px;">
                            <span style="color: #ff6b00; font-weight: 500;">Attached image</span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning text-white">Reply</button>
                        </div>

                        <!-- Replies Section -->
                        <div class="mt-5">
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th style="width: 160px; font-weight: 500; color: #7e8299; padding-right: 40px;">DATE</th>
                                            <th style="font-weight: 500; color: #7e8299;">DESCRIPTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Reply 1 -->
                                        <tr>
                                            <td class="border-0" style="vertical-align: top; padding-right: 40px;">
                                                <div class="text-muted small">09 Jan 2025, 11:45 AM</div>
                                            </td>
                                            <td class="border-0" style="vertical-align: top;">
                                                <p class="mb-3">Thank you for reaching out, Annette! We'd be happy to help you promote your video content. Here are our current promotion packages...</p>
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="d-flex align-items-center">
                                                        <img src="/img/discounts/image.png" alt="Image" class="img-thumbnail" style="width: 50px; height: 40px; object-fit: cover; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal" data-img="/img/discounts/image.png" onclick="viewImage(this)">
                                                        <span class="text-muted small ms-2">image_001.jpg</span>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <img src="/img/discounts/image.png" class="img-thumbnail" style="width: 50px; height: 40px; object-fit: cover; cursor: pointer;" alt="Promotion Package" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="viewImage(this)">
                                                        <span class="text-muted small ms-2">promo_package.png</span>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Reply 2 -->
                                        <tr>
                                            <td class="border-0" style="vertical-align: top; padding-right: 40px;">
                                                <div class="text-muted small">09 Jan 2025, 10:30 AM</div>
                                            </td>
                                            <td class="border-0" style="vertical-align: top;">
                                                <p class="mb-0">Hello, I would like to inquire about promoting our new video content. Could you please provide more information about the available promotion packages?</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content h-100">
            <div class="modal-body p-0 bg-light d-flex align-items-center justify-content-center" style="min-height: 90vh;">
                <img id="modalImage" src="" class="img-fluid h-100" style="object-fit: contain; width: 100%;" alt="Enlarged view">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .cursor-pointer { cursor: pointer; }
        .modal-backdrop.show { opacity: 0.5 !important; }
        .modal-content {
            background-color: #f8f9fa;
            border: none;
            border-radius: 0.5rem;
            margin: 1rem;
            height: 95vh;
        }
        .modal-dialog {
            max-width: 95%;
            height: 95vh;
            margin: 0 auto;
        }
    </style>
    <script>
        function viewImage(element) {
            const modalImage = document.getElementById('modalImage');
            if (modalImage) {
                modalImage.src = element.src;
                modalImage.alt = element.alt || 'Enlarged view';
            }
        }

       
        document.addEventListener('DOMContentLoaded', function() {
    
            const pathParts = window.location.pathname.split('/');
            const ticketId = pathParts[pathParts.length - 1];

            if (ticketId && !isNaN(ticketId)) {
    
                const ticketIdElements = document.querySelectorAll('.ticket-id');
                if (ticketIdElements.length > 0) {
                    ticketIdElements.forEach(el => {
                        el.textContent = ticketId;
                    });
                }
               
            }

            // Handle form submission
            document.querySelectorAll('form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                  
                    alert('Your request has been submitted!');
                });
            });

            // Initialize image modal functionality
            document.querySelectorAll('img[data-bs-toggle="modal"]').forEach(img => {
                img.addEventListener('click', function() {
                    const modalImage = document.getElementById('modalImage');
                    if (modalImage) {
                        modalImage.src = this.src;
                        modalImage.alt = this.alt || 'Enlarged view';
                    }
                });
            });
        });
    </script>
}
