@section Scripts {
  <script>
    console.log('Loading pagination.js...');
  
    function initializePagination() {
      try {
        if (typeof window.pagination !== 'undefined') {
          console.log('Initializing pagination...');
          window.pagination.init();
          return true;
        }
        console.error('window.pagination is undefined');
        return false;
      } catch (error) {
        console.error('Error initializing pagination:', error);
        return false;
      }
    }
    
   
    let initialized = initializePagination();
    
    if (!initialized) {
      console.log('Pagination not initialized yet, waiting for script to load...');
      const script = document.createElement('script');
      script.src = '/js/pagination.js';
      script.onload = function() {
        console.log('pagination.js loaded, initializing...');
        if (!initializePagination()) {
          console.error('Failed to initialize pagination after script load');
        }
      };
      script.onerror = function() {
        console.error('Failed to load pagination.js');
     
        console.log('Trying alternative path...');
        const altScript = document.createElement('script');
        altScript.src = '@Url.Content("~/js/pagination.js")';
        altScript.onload = function() {
          console.log('pagination.js loaded from alternative path, initializing...');
          initializePagination();
        };
        altScript.onerror = function() {
          console.error('Failed to load pagination.js from alternative path');
        };
        document.head.appendChild(altScript);
      };
      document.head.appendChild(script);
    }
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize pagination
      if (typeof window.pagination !== 'undefined') {
        window.pagination.init();
      }
      
      // Handle ticket detail modal
      document.addEventListener('click', function(e) {
        if (e.target.closest('.date-clickable')) {
          const ticketRow = e.target.closest('tr');
          if (ticketRow) {
            // Get ticket data from data attributes
            const ticketId = ticketRow.querySelector('.date-clickable').getAttribute('data-ticket-id');
            const ticketDate = ticketRow.querySelector('.date-clickable').getAttribute('data-date');
            const ticketSubject = ticketRow.querySelector('.date-clickable').getAttribute('data-subject');
            const ticketDepartment = ticketRow.querySelector('.date-clickable').getAttribute('data-department');
            const ticketRequestor = ticketRow.querySelector('.date-clickable').getAttribute('data-requestor');
            const ticketStatus = ticketRow.querySelector('.date-clickable').getAttribute('data-status');
            
            // Update modal with ticket data
            document.getElementById('modal-ticket-id').textContent = ticketId;
            document.getElementById('modal-ticket-subject').textContent = ticketSubject;
            document.getElementById('modal-ticket-department').textContent = ticketDepartment;
            document.getElementById('modal-ticket-requestor').textContent = ticketRequestor;
            document.getElementById('modal-ticket-date').textContent = ticketDate;
            document.getElementById('modal-ticket-status').textContent = ticketStatus;
            
            // Update status badge class
            const statusBadge = document.getElementById('modal-ticket-status-badge');
            statusBadge.className = 'badge';
            if (ticketStatus === 'Pending') {
              statusBadge.classList.add('bg-label-warning');
            } else if (ticketStatus === 'Replied') {
              statusBadge.classList.add('bg-label-success');
            } else if (ticketStatus === 'Closed') {
              statusBadge.classList.add('bg-label-info');
            } else if (ticketStatus === 'Waiting Reply') {
              statusBadge.classList.add('bg-label-danger');
            }
            
            // Show the modal
            const modal = new bootstrap.Modal(document.getElementById('ticketDetailModal'));
            modal.show();

           
            setTimeout(function() {
              const clickableImages = document.querySelectorAll('#ticketDetailModal .clickable-image');
              clickableImages.forEach(function(image) {
                image.addEventListener('click', function() {
                  const imageSrc = this.getAttribute('data-image-src');
                  const imageTitle = this.getAttribute('data-image-title');

                  document.getElementById('imageDetailModalImage').src = imageSrc;
                  const imageModal = new bootstrap.Modal(document.getElementById('imageDetailModal'));
                  imageModal.show();
                });
              });
            }, 100);
          }
        }
      });

      // Initialize tooltips
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
}
