  <!-- Tickets Table -->
  <div class="card">
    <div class="card-header d-flex justify-content-end">
      <div>
        <button class="btn" style="background-color: #dc3545; color: white; border-color: #dc3545;">Close</button>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
