@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
  <div
    class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Home" asp-action="Index" class="app-brand-link">
      <div class="d-flex align-items-center" style="padding-right: 15px;">
        <img src="~/img/discounts/icon3.png" alt="Logo" style="width: 24px; height: 24px; margin-right: 10px; margin-left: -25px;" />
        <span class="app-brand-text demo menu-text">
          <span style="font-weight: bold; color: black;">Reseller</span>
          <span style="font-weight: bold; color: orange;">Panel</span>
        </span>
      </div>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i
        class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center menu-toggle-icon d-none d-xl-flex"></i>
      <i class="bx bx-x d-flex d-xl-none bx-sm align-middle align-items-center justify-content-center"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Starter Kit menu-items *@
  <ul class="menu-inner py-1">
    <li class='menu-item@(currentPage == "/" ? " active" : "")'>
      <a asp-controller="Home" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-home-smile"></i>
        <div data-i18n="Home">Home</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Orders" ? " active" : "")'>
      <a asp-controller="Orders" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-clipboard"></i>
        <div data-i18n="Orders">Orders</div>
      </a>
    </li>
    <li class='menu-item@(currentPage.StartsWith("/Files") ? " active" : "")'>
      <a asp-controller="Files" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-file"></i>
        <div data-i18n="Files">Files</div>
      </a>
    </li>
  <li class='menu-item@(currentPage.StartsWith("/Discount") ? " active" : "" )'>
  <a asp-controller="Discount" asp-action="Index" class="menu-link">
    <img src="~/img/discount.png" alt="Discount" class="menu-icon" style="width: 15px; height: 15px; margin-right: 10px;" onerror="this.style.display='block'" />
    <i class="menu-icon tf-icons bx bx-percent" style="display: none;"></i>
    <div data-i18n="Discount">Discount</div>
  </a>
</li>

<li class='menu-item@(currentPage == "/Competitors" ? " active" : "" )'>
  <a asp-controller="Competitors" asp-action="Index" class="menu-link">
    <img src="~/img/competitors.png" alt="Competitors" class="menu-icon" style="width: 15px; height: 15px; margin-right: 10px;" onerror="this.style.display='none'" />
    <i class="menu-icon tf-icons bx bx-bar-chart" style="display: none;"></i>
    <div data-i18n="Competitors">Competitors</div>
  </a>
</li>

    <li class='menu-item@(currentPage == "/Balance" ? " active" : "")'>
      <a asp-controller="Balance" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-coin"></i>
        <div data-i18n="Balance">Balance</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Invoice" ? " active" : "")'>
      <a asp-controller="Invoice" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-table"></i>
        <div data-i18n="Invoice">Invoice</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/Store" ? " active" : "")'>
      <a asp-controller="Store" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-cart"></i>
        <div data-i18n="Store">Store</div>
      </a>
    </li>
    <li class='menu-item@(currentPage == "/CustomersTickets" ? " active" : "")'>
      <a asp-controller="CustomersTickets" asp-action="Index" class="menu-link">
        <img src="~/img/customertickets.png" alt="Customers Tickets" class="menu-icon" style="width: 20px; height: 20px; margin-right: 10px;" onerror="this.style.display='none'" />
        <i class="menu-icon tf-icons bx bx-support" style="display: none;"></i>
        <div data-i18n="Customers Tickets">Customers Tickets</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/RestoHiveTickets" ? " active" : "")'>
      <a asp-controller="RestoHiveTickets" asp-action="Index" class="menu-link">
        <img src="~/img/tickets.png" alt="RestoHive Tickets" class="menu-icon" style="width: 20px; height: 20px; margin-right: 10px;" onerror="this.style.display='none'" />
        <i class="menu-icon tf-icons bx bx-help-circle" style="display: none;"></i>
        <div data-i18n="RestoHive Tickets">RestoHive Tickets</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Settings" ? " active" : "")'>
      <a asp-controller="Settings" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-cog"></i>
        <div data-i18n="Settings">Settings</div>
      </a>
    </li>
  </ul>

</aside>
<!-- / Menu -->
