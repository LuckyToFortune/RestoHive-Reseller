<!-- Generate Discount Modal -->
<div class="modal fade" id="generateDiscountModal" tabindex="-1" aria-labelledby="generateDiscountModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl d-flex align-items-center justify-content-center" style="max-width: 800px; height: 100vh; margin: 0 auto;">
    <div class="modal-content" style="height: 100vh;">
      <div class="modal-header">
        <h5 class="modal-title text-center w-100 mt-10" id="generateDiscountModalLabel">Discount</h5>
      </div>
      <div class="modal-body d-flex align-items-center justify-content-center">
        <div style="width: 100%; max-width: 400px;">
          <form>
          <div class="mb-4">
            <label for="expirationDate" class="form-label fw-semibold">Expiration Date</label>
            <div class="input-group">
              <input type="text" class="form-control" id="expirationDate" value="01 Jan 2025" placeholder="DD MMM YYYY" style="border-right: none;">
              <span class="input-group-text" style="border-left: none;">
                <i class="bx bx-calendar"></i>
              </span>
            </div>
          </div>
          <div class="mb-4">
            <label for="discountPercentage" class="form-label fw-semibold">DISCOUNT</label>
            <div class="input-group">
              <input type="number" class="form-control" id="discountPercentage" value="18.55" step="0.01" min="0" max="100" style="border-right: none;">
              <span class="input-group-text" style="border-left: none;">%</span>
            </div>
          </div>
          <div class="mt-4">
            <button type="button" class="btn btn-warning w-100" onclick="submitDiscount()">Generate</button>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- View Discount Modal -->
<div class="modal fade" id="viewDiscountModal" tabindex="-1" aria-labelledby="viewDiscountModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl d-flex align-items-center justify-content-center" style="max-width: 800px; height: 100vh; margin: 0 auto;">
    <div class="modal-content" style="height: 100vh;">
      <div class="modal-header">
